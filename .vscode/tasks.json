{
  "tasks": [
    {
      "type": "shell",
      "command": "cargo",
      "args": ["make", "check"],
      "problemMatcher": ["$rustc"],
      "group": "build",
      "label": "Check Code"
    },
    {
      "type": "shell",
      "command": "cargo",
      "args": ["make", "format"],
      "problemMatcher": ["$rustc"],
      "group": "build",
      "label": "Format Code"
    },
    {
      "type": "shell",
      "command": "cargo",
      "args": ["make", "build"],
      "problemMatcher": ["$rustc"],
      "group": "build",
      "label": "Build Code"
    },
    {
      "problemMatcher": ["$rustc"],
      "group": "build",
      "label": "Format & Build",
      "dependsOn": ["Format Code", "Build Code"]
    },
    {
      "problemMatcher": ["$rustc"],
      "command": "cargo",
      "args": [
        "run",
        "--bin",
        "rustofluid",
        "--",
        "-e",
        "0.05",
        "--timestep",
        "0.016",
        "--plot-stats",
        "--plot-pressure",
        "--plot-velocity",
      ],
      "group": "build",
      "options": { "env": { "RUST_BACKTRACE": "1" } },
      "label": "Build & Run"
    },
    {
      "problemMatcher": ["$rustc"],
      "command": "cargo",
      "args": [
        "run",
        "--release",
        "--bin",
        "rustofluid",
        "--",
        "-e",
        "2.0",
        "--timestep",
        "0.016",
        "--plot-stats",
        "--plot-pressure",
        "--plot-velocity",
        "--plot-masked-pressure",
        "--plot-masked-velocity"
      ],
      "group": "build",
      "options": { "env": { "RUST_BACKTRACE": "1" } },
      "label": "Build & Run Release"
    }
  ]
}
